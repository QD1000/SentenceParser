<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SentenceParser"
        xmlns:View="clr-namespace:SentenceParser.View" x:Class="SentenceParser.MainWindow"
        mc:Ignorable="d"
        Title="Sentence Parser" Height="600" Width="570"              
        WindowStartupLocation="CenterScreen" Icon="{StaticResource TitleImage}">
    <Grid>
        <View:SentenceParserView HorizontalAlignment="Stretch" Margin="5,5,5,5" VerticalAlignment="Stretch" x:Name="sentenceParserView" DataContext="{Binding SentenceParserViewModel}" />
    </Grid>
</Window>
